<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>
  <% if (error && error.length > 0) { %>
    <div class="alert alert-danger">
      <%= error[0] %> 
    </div>
  <% } %>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/login" method="POST">
            <div class="form-group">
              <label for="username">Email</label>
              <input autocomplete="off" type="email" class="form-control" name="username" required>
            </div> 
            <div class="form-group">
              <label for="password">Password</label>
              <input autocomplete="off" type="password" class="form-control" name="password" required>
            </div>
            <button type="submit" class="btn btns btn-light">Login</button>
          </form>

        </div>
      </div>
    </div>

    <div class="col-sm-4 cd">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social " href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign In with Google
          </a>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social " href="/auth/facebook" role="button">
            <i class="fab fa-facebook"></i>
            Sign In with Facebook
          </a>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social " href="/auth/github" role="button">
            <i class="fab fa-github"></i>
            Sign In with GitHub
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
