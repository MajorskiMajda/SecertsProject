<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered Secrets!</h1>
     <% usersWithSecrets.forEach((user) => { %>
      <p class="secret-text"><%=user.secret%></p>
     <%})%>
    <hr>
    <%if(isAuthenticated){ %>
      <a class="btn btns btn-lg btn-light" href="/logout" role="button">Log Out</a>
      <a class="btn btns btn-light btn-lg" href="/submit" role="button">Submit a Secret</a>
   <% } else { %>
    <a class="btn btns btn-lg btn-light" href="/login" role="button">Log In</a>
    <a class="btn btns btn-light btn-lg" href="/register" role="button">Register</a>
  <% }%>
  </div>
</div>

<%- include('partials/footer') %>